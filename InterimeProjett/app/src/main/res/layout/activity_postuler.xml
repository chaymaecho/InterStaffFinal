<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".frontend.CandidatsAnonyme.PostulerActivity">
    <LinearLayout
        android:id="@+id/linearColumnundrawpicprof"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:layout_gravity="center"
        tools:layout_editor_absoluteX="-98dp"
        tools:layout_editor_absoluteY="-190dp">


    <com.google.android.material.appbar.AppBarLayout
        android:id="@+id/toolbar"
        android:layout_width="match_parent"
        android:layout_height="?attr/actionBarSize"
        android:elevation="4dp"
        android:theme="@style/ThemeOverlay.AppCompat.Light"
        android:backgroundTint="#ffffff">
        <androidx.appcompat.widget.Toolbar
            android:id="@+id/maintoolbar"
            android:layout_width="match_parent"
            android:layout_height="?attr/actionBarSize">



            <ImageView android:id="@+id/imageShare"
                android:layout_height="@dimen/_24pxh"
                android:layout_width="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_10pxh"
                android:scaleType="fitXY"
                android:layout_marginEnd="@dimen/_20pxh"
                android:src="@drawable/partager"
                android:layout_gravity="end"
                tools:ignore="ContentDescription"
                tools:src="@drawable/partager"/>


            <ImageView android:id="@+id/imageHomePage"
                android:layout_height="@dimen/_23pxh"
                android:layout_width="@dimen/_23pxh"
                android:scaleType="fitXY"
                android:layout_gravity="end"
                android:src="@drawable/coeur"
                tools:ignore="ContentDescription"
                tools:src="@drawable/coeur"/>

        </androidx.appcompat.widget.Toolbar>


    </com.google.android.material.appbar.AppBarLayout>


    <FrameLayout android:id="@+id/frameStackback"
        android:layout_height="match_parent"
        android:layout_width="match_parent" style="@style/groupStylewhite_A700">


        <LinearLayout android:id="@+id/linearColumnback"
            android:layout_gravity="center"
            android:layout_height="match_parent"
            android:layout_marginBottom="@dimen/_20pxv"
            android:layout_marginEnd="@dimen/_12pxh"
            android:layout_marginStart="@dimen/_15pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:background="@drawable/okay"
            android:layout_width="match_parent" android:orientation="vertical">

            <TextView android:ellipsize="end"
                android:id="@+id/txttitle"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_23pxh"
                android:layout_marginTop="@dimen/_1pxv"
                android:layout_width="match_parent"
                android:singleLine="true"
                android:text="Titre"
                style="@style/txtInterbold18"
                tools:text="Title"/>

            <TextView
                android:id="@+id/txtcompany"
                style="@style/txtInterbold14"
                android:layout_width="174dp"
                android:layout_height="wrap_content"
                android:layout_gravity="start"
                android:layout_marginEnd="@dimen/_24pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_8pxv"
                android:ellipsize="end"
                android:singleLine="true"
                android:text="Organisation" />
            <LinearLayout android:gravity="end"
                android:id="@+id/linearRowparisseventyfive"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_7pxh"
                android:layout_marginStart="@dimen/_24pxh"
                android:layout_marginTop="@dimen/_12pxv"
                android:layout_width="match_parent"
                android:orientation="horizontal">

                <TextView
                    android:id="@+id/txtville"
                    style="@style/txtIntermedium12"
                    android:layout_width="214dp"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_weight="0.4"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Paris"
                    tools:text="Paris" />

                <FrameLayout
                    android:id="@+id/frameStackstar"
                    android:layout_width="@dimen/_111pxh"
                    android:layout_height="20dp"
                    android:layout_marginStart="@dimen/_13pxh">

                    <TextView
                        android:id="@+id/txtdate"
                        style="@style/txtInterregular16"
                        android:layout_width="154dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="09/07/2024" />

                </FrameLayout>
            </LinearLayout>


        <LinearLayout android:id="@+id/linearColumntrierpar"
            android:layout_height="470dp"
            android:layout_marginBottom="@dimen/_4pxv"
            android:layout_marginEnd="@dimen/_10pxh"
            android:layout_marginTop="@dimen/_13pxv"
            android:layout_width="match_parent"
            android:orientation="vertical">

        <ScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".MainActivity">
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginTop="@dimen/_3pxv"
            android:orientation ="vertical"
            android:background="@drawable/okay">

            <LinearLayout android:id="@+id/linearColumnresume"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_marginTop="@dimen/_24pxv"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStylebluegray_100_30cornerRadius">





            <LinearLayout android:gravity="start"
                android:id="@+id/linearjobfamily"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_10pxh"
                android:layout_marginStart="@dimen/_7pxh"
                android:layout_marginTop="@dimen/_10pxv"
                android:layout_width="wrap_content"
                android:orientation="horizontal">
                <ImageView android:id="@+id/imagejobfamily"
                    android:layout_height="@dimen/_17pxh"
                    android:layout_marginBottom="@dimen/_1pxv"
                    android:layout_marginTop="@dimen/_2pxv"
                    android:layout_width="@dimen/_25pxh"
                    android:scaleType="fitXY"
                    android:src="@drawable/img_business"
                    tools:ignore="ContentDescription"
                    tools:src="@drawable/img_business"/>

                <TextView
                    android:id="@+id/txtjobfamly"
                    style="@style/txtInterregular16"
                    android:layout_width="284dp"
                    android:layout_height="match_parent"
                    android:layout_marginStart="@dimen/_8pxh"
                    android:ellipsize="end"
                    android:singleLine="true"
                    android:text="Catégorie professionnelle" />

            </LinearLayout>


                <TextView android:ellipsize="end"
                    android:id="@+id/textfamily"
                    android:layout_gravity="start"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_51pxh"
                    android:layout_marginStart="@dimen/_51pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="Informatique"
                    style="@style/txtInterregular13" />


                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowdiploma"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_5pxh"
                    android:layout_marginTop="@dimen/_8pxv"
                    android:layout_width="match_parent" android:orientation="horizontal">
                    <ImageView android:id="@+id/imageDiploma"
                        android:layout_height="@dimen/_18pxh"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_width="@dimen/_27pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_diploma"
                        tools:ignore="ContentDescription" tools:src="@drawable/img_diploma"/>
                    <TextView android:ellipsize="end"
                        android:id="@+id/txtFormationetce"
                        android:layout_height="wrap_content"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:layout_weight="0.86"
                        android:layout_width="0dp"
                        android:singleLine="true"
                        android:text="Type de contract"
                        style="@style/txtInterregular16"
                        tools:text="Type of contract"/>
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/texttype"
                    android:layout_gravity="start"
                    android:layout_height="match_parent"
                    android:layout_marginEnd="@dimen/_51pxh"
                    android:layout_marginStart="@dimen/_51pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="Alternance"
                    style="@style/txtInterregular13" />


                <LinearLayout android:gravity="start"
                    android:id="@+id/linearRowbusiness"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_7pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <ImageView android:id="@+id/imageBusiness"
                        android:layout_height="@dimen/_17pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_width="@dimen/_25pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/baseline_euro_24"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/baseline_euro_24"/>

                    <TextView
                        android:id="@+id/txtTypedeposte"
                        style="@style/txtInterregular16"
                        android:layout_width="284dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Salaire" />
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtsalary"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_marginEnd="@dimen/_51pxh"
                    android:layout_marginStart="@dimen/_51pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="2000€"
                    style="@style/txtInterregular13"
                    tools:text="2000€"/>



                <LinearLayout android:gravity="start"
                    android:id="@+id/linearjoblevel"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_10pxh"
                    android:layout_marginStart="@dimen/_7pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="wrap_content"
                    android:orientation="horizontal">
                    <ImageView android:id="@+id/imagejoblevel"
                        android:layout_height="@dimen/_17pxh"
                        android:layout_marginBottom="@dimen/_1pxv"
                        android:layout_marginTop="@dimen/_2pxv"
                        android:layout_width="@dimen/_25pxh"
                        android:scaleType="fitXY"
                        android:src="@drawable/img_business"
                        tools:ignore="ContentDescription"
                        tools:src="@drawable/img_business"/>

                    <TextView
                        style="@style/txtInterregular16"
                        android:layout_width="284dp"
                        android:layout_height="match_parent"
                        android:layout_marginStart="@dimen/_8pxh"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="Niveau de poste" />
                </LinearLayout>
                <TextView android:ellipsize="end"
                    android:id="@+id/txtjoblevel"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_marginEnd="@dimen/_51pxh"
                    android:layout_marginStart="@dimen/_51pxh"
                    android:layout_marginTop="@dimen/_3pxv"
                    android:layout_width="match_parent"
                    android:singleLine="true"
                    android:text="Intermédiaire"
                    style="@style/txtInterregular13"
                    tools:text="Intermediate"/>


            </LinearLayout>




            <LinearLayout android:id="@+id/linearColumndetaildeposte"
                android:layout_height="wrap_content"
                android:layout_marginEnd="@dimen/_19pxh"
                android:layout_marginStart="@dimen/_19pxh"
                android:layout_marginTop="@dimen/_14pxv"
                android:layout_width="match_parent"
                android:orientation="vertical" style="@style/groupStylebluegray_100_30cornerRadius">
                <TextView android:ellipsize="end"
                    android:id="@+id/txtDetaildePoste"
                    android:layout_gravity="start"
                    android:layout_height="wrap_content"
                    android:layout_marginEnd="@dimen/_16pxh"
                    android:layout_marginStart="@dimen/_16pxh"
                    android:layout_marginTop="@dimen/_10pxv"
                    android:layout_width="wrap_content"
                    android:singleLine="true"
                    android:text="Déscription"
                    style="@style/txtIntersemibold18"/>
                <TextView android:gravity="center_horizontal"
                    android:id="@+id/txtDescription"
                    android:layout_height="wrap_content"
                    android:layout_marginBottom="@dimen/_11pxv"
                    android:layout_marginEnd="@dimen/_7pxh"
                    android:layout_marginStart="@dimen/_9pxh"
                    android:layout_marginTop="@dimen/_9pxv"
                    android:layout_width="match_parent"
                    android:text="Mettre à jour"
                    style="@style/txtInterregular14"
                    tools:text="modify"/>

            </LinearLayout>



        </LinearLayout>
        </ScrollView>
        </LinearLayout>
        <LinearLayout
            android:id="@+id/linea2mndetaildeposte"
            android:layout_height="wrap_content"
            android:layout_marginEnd="@dimen/_19pxh"
            android:layout_marginStart="@dimen/_19pxh"
            android:layout_marginTop="@dimen/_14pxv"
            android:layout_width="match_parent"
            android:gravity="center"
            android:orientation="vertical">


        <com.google.android.material.button.MaterialButton
                android:id="@+id/btncandidater"
                style="@style/Widget.MaterialComponents.Button.Icon"
                android:layout_width="260dp"
                android:layout_height="50dp"
                android:textColor="@color/black"
                android:text="Postuler"
                android:backgroundTint="@color/green_100"
                app:iconGravity="textStart"
                app:iconPadding="8dp"
                app:iconSize="20dp" />

        </LinearLayout>

        </LinearLayout>
    </FrameLayout></LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>