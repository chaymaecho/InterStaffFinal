<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:padding="20dp"
    android:layout_height="match_parent"
    android:background="@drawable/vertbleuu">
    <LinearLayout
        android:layout_width="363dp"
        android:layout_height="wrap_content"
        android:layout_marginStart="@dimen/_20pxh"
        android:layout_marginTop="@dimen/_7pxv"
        android:layout_marginEnd="@dimen/_11pxh"
        android:gravity="start"
        android:orientation="horizontal"
        tools:ignore="MissingConstraints"
        >

        <androidx.cardview.widget.CardView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_margin="8dp"
            app:cardCornerRadius="8dp"
            app:cardElevation="4dp"
            style="@style/groupStylegray_1"
            tools:ignore="MissingConstraints">
            <ImageView
                android:layout_width="match_parent"
                android:layout_height="177dp"
                android:alpha="0.5"
                android:scaleType="centerCrop"
                android:src="@drawable/vertjaun" />

            <LinearLayout
                android:id="@+id/linearRowdeveloppeurweb"
                android:layout_width="363dp"
                android:layout_height="wrap_content"
                android:layout_marginStart="@dimen/_20pxh"
                android:layout_marginTop="@dimen/_7pxv"
                android:layout_marginEnd="@dimen/_11pxh"
                android:gravity="start"
                android:orientation="horizontal">

                <LinearLayout
                    android:id="@+id/eveloppeurweb2"
                    android:layout_width="199dp"
                    android:layout_height="130dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/txtDeveloppeurWeb"
                        style="@style/txtInterbold15"
                        android:layout_width="280dp"
                        android:layout_height="30dp"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="nom de candidat"
                        android:textSize="18sp" />

                    <TextView
                        android:id="@+id/txtentreprise"
                        style="@style/txtIntermedium12"
                        android:layout_width="280dp"
                        android:layout_height="wrap_content"
                        android:ellipsize="end"
                        android:singleLine="true"
                        android:text="status de candidat"
                        android:textSize="18sp" />

                    <LinearLayout
                        android:id="@+id/linearRowoppeurweb"
                        android:layout_width="201dp"
                        android:layout_height="wrap_content"
                        android:gravity="start"
                        android:orientation="vertical">


                        <LinearLayout
                            android:id="@+id/linearRoweurone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_11pxh"
                            android:layout_marginTop="@dimen/_2pxv"
                            android:layout_marginEnd="@dimen/_11pxh"
                            android:gravity="start"
                            android:orientation="horizontal">


                            <ImageView
                                android:id="@+id/imageLocalisateurOne"
                                android:layout_width="@dimen/_12pxh"
                                android:layout_height="@dimen/_15pxh"
                                android:layout_marginTop="@dimen/_4pxv"
                                android:scaleType="fitXY"
                                android:src="@drawable/img_localisateur1" />

                            <TextView
                                android:id="@+id/txtregion"
                                style="@style/txtIntermedium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3pxh"
                                android:layout_marginTop="@dimen/_1pxv"
                                android:layout_marginBottom="@dimen/_1pxv"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="Paris"
                                android:textSize="14sp" />


                        </LinearLayout>


                        <LinearLayout
                            android:id="@+id/linearRowrevenusone"
                            android:layout_width="match_parent"
                            android:layout_height="wrap_content"
                            android:layout_marginStart="@dimen/_11pxh"
                            android:layout_marginTop="@dimen/_5pxv"
                            android:layout_marginEnd="@dimen/_11pxh"
                            android:gravity="start"
                            android:orientation="horizontal">

                            <TextView
                                android:id="@+id/txtPrice"
                                style="@style/txtIntermedium12"
                                android:layout_width="match_parent"
                                android:layout_height="wrap_content"
                                android:layout_marginStart="@dimen/_3pxh"
                                android:layout_marginTop="@dimen/_1pxv"
                                android:ellipsize="end"
                                android:singleLine="true"
                                android:text="DÃ©poser le "
                                android:textSize="14sp" />
                        </LinearLayout>


                        <LinearLayout
                            android:layout_width="210dp"
                            android:layout_height="20dp"
                            android:gravity="start"
                            android:orientation="horizontal"
                            >

                        </LinearLayout>

                    </LinearLayout>

                </LinearLayout>


                <LinearLayout
                    android:id="@+id/eveloppeurweb1"
                    android:layout_width="111dp"
                    android:layout_height="130dp"
                    android:gravity="start"
                    android:orientation="vertical">

                    <Button
                        android:id="@+id/refuser"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_4pxv"
                        android:backgroundTint="@color/green_100"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2pxv"
                        android:paddingBottom="@dimen/_2pxv"
                        android:singleLine="true"
                        android:text="AccepteR"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/txtpostuler"
                        android:layout_width="wrap_content"
                        android:layout_height="44dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_4pxv"
                        android:backgroundTint="@color/green_100"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2pxv"
                        android:paddingBottom="@dimen/_2pxv"
                        android:singleLine="true"
                        android:text="Refuser"
                        android:textColor="@color/black"
                        android:textSize="10sp" />

                    <Button
                        android:id="@+id/voirplu"
                        android:layout_width="wrap_content"
                        android:layout_height="32dp"
                        android:layout_gravity="bottom"
                        android:layout_marginBottom="@dimen/_4pxv"
                        android:backgroundTint="@color/green_100"
                        android:enabled="false"
                        android:gravity="center"
                        android:paddingTop="@dimen/_2pxv"
                        android:paddingBottom="@dimen/_2pxv"
                        android:singleLine="true"
                        android:text="Voir plus"
                        android:textColor="@color/black"
                        android:textSize="10sp" />


                </LinearLayout>


            </LinearLayout>
        </androidx.cardview.widget.CardView>
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>